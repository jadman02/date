<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dateorduck" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>Date or Duck</name>
	<description>
		Create dates with people around you.
	</description>

	<author email="info@dateorduck.com" href="http://dateorduck.com">
	   Date or Duck Team
	</author>
<content src="index.html" />
	<access origin="*" subdomains="true" />
	<preference name="phonegap-version" value="cli-6.3.0" />

	<gap:plugin name="cordova-plugin-facebook4" source="npm" spec="1.7.3">
<params>
		<param name="APP_ID" value="784956164912201" />
        <param name="APP_NAME" value="Single Duck" />
</params>
		</gap:plugin>
	


        
<gap:plugin name="cordova-plugin-whitelist" source="npm" spec="1.2.2" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="fb:*" />
    <allow-intent href="whatsapp:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

 <!-- To allow easy social sharing using native intents. 
      Plugin adds WRITE_EXTERNAL_STORAGE permission, which we don't need, so I remove it below.
      https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin -->
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" spec="5.1.3" />
    <config-file platform="android" parent="/manifest" mode="delete">
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    </config-file>
    <config-file platform="ios" target="*-Info.plist" parent="LSApplicationQueriesSchemes">
        <array>
            <!-- https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin -->
            <string>whatsapp</string>
            <string>fb</string>
            <!-- https://github.com/jeduan/cordova-plugin-facebook4/blob/master/plugin.xml#L136-L143 -->
            <string>fbapi</string>
            <string>fb-messenger-api</string>
            <string>fbauth2</string>
            <string>fbshareextension</string>
        </array>
    </config-file>

</widget>
